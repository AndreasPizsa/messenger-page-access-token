{
  "name": "messenger-page-access-token",
  "description": "üóù Have the receiving page's access_token handy",
  "version": "1.0.3",
  "author": "Andreas Pizsa <hopster@gmail.com> (https://github.com/AndreasPizsa)",
  "bugs": {
    "url": "https://github.com/andreaspizsa/messenger-page-access-token/issues",
    "email": "hopster@gmail.com"
  },
  "contributors": [
    "Andreas Pizsa <hopster@gmail.com> (https://github.com/AndreasPizsa)"
  ],
  "dependencies": {
    "lodash.get": "^4.4.2",
    "lodash.isstring": "^4.0.1",
    "lodash.set": "^4.3.2"
  },
  "ava": {
    "failFast": true,
    "verbose": true
  },
  "devDependencies": {
    "ava": "^0.22.0",
    "codecov": "^2.3.0",
    "cross-env": "^5.0.5",
    "eslint": "^4.5.0",
    "eslint-config-prettier": "^2.3.0",
    "eslint-plugin-prettier": "^2.2.0",
    "husky": "^0.14.3",
    "lint-staged": "^4.0.4",
    "messenger-core": "^0.1.0",
    "nyc": "^11.1.0",
    "prettier": "^1.6.1",
    "randomatic": "^2.0.0",
    "remark-cli": "^4.0.0",
    "remark-preset-github": "^0.0.6",
    "xo": "^0.19.0"
  },
  "engines": {
    "node": ">=8.3"
  },
  "homepage": "https://github.com/andreaspizsa/messenger-page-access-token",
  "keywords": [
    "messenger-core-plugin",
    "facebook messenger",
    "facebook",
    "messenger",
    "bot"
  ],
  "license": "MIT",
  "lint-staged": {
    "*.{js,jsx,mjs,ts,tsx,css,less,scss,json,graphql}": [
      "prettier --write --single-quote --trailing-comma none --no-semi",
      "git add"
    ],
    "*.md": [
      "remark . -qfo",
      "git add"
    ]
  },
  "main": "index.js",
  "nyc": {
    "check-coverage": true,
    "lines": 100,
    "functions": 100,
    "branches": 100,
    "reporter": [
      "lcov",
      "html",
      "text"
    ]
  },
  "remarkConfig": {
    "plugins": [
      "preset-github"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/andreaspizsa/messenger-page-access-token"
  },
  "scripts": {
    "coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "x-lint": "xo && remark . -qfo",
    "lint": "echo",
    "precommit": "npm test",
    "test": "npm run lint && npm run test-coverage",
    "test-coverage": "cross-env NODE_ENV=test nyc ava"
  },
  "xo": {
    "extends": "prettier",
    "plugins": [
      "prettier"
    ],
    "parserOptions": {
      "sourceType": "script"
    },
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true,
          "bracketSpacing": true,
          "trailingComma": "none",
          "semi": false
        }
      ],
      "max-len": [
        "error",
        {
          "code": 80,
          "ignoreUrls": true
        }
      ],
      "capitalized-comments": "off",
      "camelcase": "off",
      "no-warning-comments": "off"
    },
    "space": true
  }
}
